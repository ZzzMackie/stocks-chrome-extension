{
  "manifest_version": 3,
  "name": "Stock assistant",
  "version": "1.0.0",
  "description": "提供股票、加密货币、ETF、新闻和全球市场数据的实时报价，随时随地都能获取。",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://query1.finance.yahoo.com/*",
    "https://yahoo-finance15.p.rapidapi.com/*",
    "https://api.rss2json.com/*",
    "https://feeds.finance.yahoo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Stock assistant",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "*.js", "*.css", "*.html"],
      "matches": ["<all_urls>"]
    }
  ]
}